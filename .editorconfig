# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 2 spaces for indentation
indent_style = space
indent_size = 2

# Match JS, TS, JSX, TSX, JSON, CSS, SCSS, HTML, MD files
[*.{js,jsx,ts,tsx,json,css,scss,html,md}]
indent_style = space
indent_size = 2

# Match package.json specifically
[package.json]
indent_style = space
indent_size = 2